<div class="grid-container">
  <div class="grid-x grid-padding-x">
    <div class="field  small-12 medium-offset-4 medium-4 cell">    
      <h2>Cambiar contraseÃ±a</h2>
        <%= render "devise/shared/error_messages", resource: resource %>
